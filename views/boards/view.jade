extends ../layout

block content
	div.dropdown
		button(class="btn btn-default dropdown-toggle", type="button", id="nav-boards", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
			| Boards
			span(class="caret")
		ul(class="dropdown-menu", aria-labelledby="nav-boards")
			li 
				a(href="/w/boards") All Boards
			li
				a(href="/w/boards/0") New Board
			li
				a(href="/w/boards/#{board._id}?action=edit") Edit Board
			li
				a(href="/w/boards/#{board._id}?action=delete") Delete Board
				
	h1 Board

	ul
		li #{board.name}

	h1 Columns

	if columns && columns.length > 0
		ul
			each column in columns
				li
					a(href='/w/columns/#{column._id}') #{column.name}
	else
		ul
			li
				a(href="/w/boards/#{board._id}?action=edit") Edit Columns
			