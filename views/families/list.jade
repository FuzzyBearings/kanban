extends ../layout

block content

	-
		var docsNameURL = 'families';
		var docsName = 'Families';
		var docName = 'Family';				

	nav(class="navbar navbar-default")
		ul(class="nav navbar-nav")
			li.dropdown
				a(href="#",
				  class="dropdown-toggle",
				  data-toggle="dropdown",
				  role="button",
				  aria-haspopup="true"
				  aria-expanded="false") Family
					span.caret
				ul(class="dropdown-menu")
					li.disabled
						a(href="/w/families") All Families
					li.divider(role="separator")
					li
						a(href="/w/families/0") New Family

	table.top-level
		tr
			th
				h1 #{docName}
		tr
			td
				if remoteDocs
					ul
						each remoteDoc in remoteDocs
							li
								a(href='/w/#{docsNameURL}/#{remoteDoc._id}') #{remoteDoc.name}
