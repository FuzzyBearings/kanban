extends ../layout

block content

	nav(class="navbar navbar-default")
		ul(class="nav navbar-nav")
			li.dropdown
				a(href="#", 
				  class="dropdown-toggle",
				  data-toggle="dropdown",
				  role="button",
				  aria-haspopup="true"
				  aria-expanded="false")
					| Families
					span(class="caret")
				ul(class="dropdown-menu")
					li.disabled
						a(href="/w/families") All Families
					li
						a(href="/w/families/0") New Family

	h1 Families
	
	ul
		if families
			each family in families
				li
					a(href='/w/families/#{family._id}') #{family.name}
